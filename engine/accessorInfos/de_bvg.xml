	<regExp><![CDATA[(?:<tr class="">\s*<td>\s*)([0-9]{2})(?::)([0-9]{2})(?:\s*</td>\s*<td>\s*<img src="[^"]*" class="ivuTDProductPicture" alt="[^"]*"\s*class="ivuTDProductPicture" />)(\w{1,10})(?:\s*)((\w*\s*)?[0-9]+)(?:\s*</td>\s*<td>\s*<a class="ivuLink"[^>]*>)(.*)(?:</a>\s*</td>\s*<td>\s*<!-- .* -->\s*<a class="ivuLink"[^>]*>[0-9]+</a>\s*</td>\s*</tr>)]]></regExp>
	<infos>
	    <info>DepartureHour</info> <info>DepartureMinute</info> <info>TypeOfVehicle</info> <info>TransportLine</info> <info>Target</info>
	</infos>
    </departures>

    <possibleStops>
	<item>
	    <regExpRange><![CDATA[(?:<select name="[^"]*" size="[^"]*" class="ivuSelectBox">\s*)(.*)(?:\s*</select>)]]></regExpRange>
	    <regExp><![CDATA[(?:<option value="[^"]*">\s*)([^\s][^<]*[^\s])(?:\s*</option>)]]></regExp>
	    <infos><info>StopName</info></infos>
	</item>
    </possibleStops>
</regExps>

